{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Hardhat Node",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["node"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üöÄ Run Script (Interactive)",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "${input:scriptFile}", "--network", "${input:network}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üì¶ Deploy to Localhost",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "${input:deployScript}", "--network", "localhost"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "wait-for-node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üåê Deploy to Sepolia",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "${input:deployScript}", "--network", "sepolia"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üîß Interact Script",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "${input:interactScript}", "--network", "${input:network}"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üß™ Debug All Tests",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üéØ Debug Specific Test",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["test", "${input:testFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "scriptFile",
      "description": "Enter the script file path",
      "default": "scripts/",
      "type": "promptString"
    },
    {
      "id": "deployScript",
      "description": "Select deployment script",
      "default": "scripts/deploy.ts",
      "type": "pickString",
      "options": [
        "scripts/deploy.ts",
        "scripts/deployAccessContract.ts"
      ]
    },
    {
      "id": "interactScript",
      "description": "Select interaction script",
      "default": "scripts/interact.ts",
      "type": "pickString",
      "options": [
        "scripts/interact.ts",
        "scripts/interactAccessContract.ts"
      ]
    },
    {
      "id": "network",
      "description": "Select network",
      "default": "localhost",
      "type": "pickString",
      "options": [
        "localhost",
        "sepolia",
        "hardhat"
      ]
    },
    {
      "id": "testFile",
      "description": "Enter the test file path (e.g., test/accessContract.test.ts)",
      "default": "test/",
      "type": "promptString"
    }
  ],
  "compounds": [
    {
      "name": "üöÄ Start Node & Deploy to Localhost",
      "configurations": [
        "Start Hardhat Node",
        "üì¶ Deploy to Localhost"
      ],
      "stopAll": true
    },
    {
      "name": "üåê Deploy to Sepolia",
      "configurations": [
        "üåê Deploy to Sepolia"
      ],
      "stopAll": true
    }
  ]
}
