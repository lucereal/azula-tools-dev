{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Hardhat Node",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["node"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug deploy.ts with Hardhat",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "scripts/deploy.ts", "--network", "localhost"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "wait-for-node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Deploy Sepolia - deploy.ts with Hardhat",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "scripts/deploy.ts", "--network", "sepolia"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "wait-for-node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug interact.ts with Hardhat",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "scripts/interact.ts", "--network", "localhost"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Sepolia - interact.ts with Hardhat",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["run", "scripts/interact.ts", "--network", "sepolia"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Tests",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Specific Test File",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["test", "${input:testFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug AccessContract Tests",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["test", "test/accessContract.test.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "testFile",
      "description": "Enter the test file path (e.g., test/accessContract.test.ts)",
      "default": "test/",
      "type": "promptString"
    }
  ],
  "compounds": [
    {
      "name": "ðŸš€ Start Node & Debug Deploy",
      "configurations": [
        "Start Hardhat Node",
        "Debug deploy.ts with Hardhat"
      ],
      "stopAll": true
    },
     {
      "name": "Sepolia Deploy - Start Node & Debug Deploy",
      "configurations": [
        "Start Hardhat Node",
        "Deploy Sepolia - deploy.ts with Hardhat"
      ],
      "stopAll": true
    },
    {
      "name": "Sepolia Interact - Start Node & Debug Interact",
      "configurations": [
        "Start Hardhat Node",
        "Sepolia - interact.ts with Hardhat"
      ],
      "stopAll": true
    }
  ]
}
